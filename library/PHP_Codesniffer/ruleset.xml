<?xml version="1.0"?>
<ruleset name="Custom Standard">

    <description>A custom coding standard</description>

    <rule ref="PSR2" />

    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>*[/\\]application[/\\]modules[/\\]*[/\\]controllers[/\\]*</exclude-pattern>
        <exclude-pattern>*[/\\]tests[/\\]php[/\\]ControllerTestCase\.php</exclude-pattern>
    </rule>

    <rule ref="Squiz.Classes.ValidClassName.NotCamelCaps">
        <exclude-pattern>*[/\\]application[/\\]modules[/\\]*[/\\]controllers[/\\]*</exclude-pattern>
    </rule>

    <rule ref="PSR2.Classes.PropertyDeclaration.Underscore">
        <exclude-pattern>*[/\\]library[/\\]Alchemy[/\\]Model[/\\]DbTable[/\\]Users\.php</exclude-pattern>
    </rule>

    <rule ref="PSR2.Methods.MethodDeclaration.Underscore">
        <exclude-pattern>*[/\\]library[/\\]Alchemy[/\\]Controller[/\\]Action\.php</exclude-pattern>
        <exclude-pattern>*[/\\]library[/\\]Alchemy[/\\]Application[/\\]Bootstrap\.php</exclude-pattern>
    </rule>

    <rule ref="Generic.NamingConventions.CamelCapsFunctionName.ScopeNotCamelCaps">
        <exclude-pattern>*[/\\]library[/\\]Alchemy[/\\]Controller[/\\]Action\.php</exclude-pattern>
        <exclude-pattern>*[/\\]library[/\\]Alchemy[/\\]Application[/\\]Bootstrap\.php</exclude-pattern>
    </rule>

</ruleset>